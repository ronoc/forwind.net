<div id="content_container">
 
<% @releases.each do |release| %>
<div class="release_index_promo">
<a href=<%= "/releases/#{release.id}" %>>
<img src= <%="/images/releases/"+ release.cat.downcase + "_sm.jpg" %>></img></a>
<h2><%= link_to release.title, release %></h2>
<p><%= release.short_desc %></p>
</div>
<% end %>
</div>







