<div id="content_container">

<div id="container_2grid_left">
<img src=<%=File.join(@s3_images, @podcast.file_name + ".jpg") %>>
<dl class="podcastTracks">
<% @podcast.track_list.tracks.sort_by { |tr| tr.position }.each do |t| %>
<dt><%= (t.position + 1).to_s %></dt><dd><%= t.artist_title %></dd><dd class="podcastTrackLabel"><%= t.label.upcase %></dd>
<% end %>
</dl>
</div>


<div id= "container_1grid_right">
<dl>
    <dt>TITLE :</dt>
    <dd><%= @podcast.title.upcase %></dd>
 
    <dt>MIXED BY :</dt>
    <dd><%= @podcast.artist.name.upcase %></dd>
 
    <dt>RELEASE DATE :</dt>
    <dd><%= @podcast.updated_at.strftime("%Y/%m/%d") %></dd>

	<dt>CATALOGUE # :</dt>
    <dd><%= @podcast.cat_no %></dd>

	<dt>DURATION :</dt>
    <dd><%= @podcast.duration.to_s %> minutes</dd>

<% if @podcast.available? %>
</dl>


<div id="podcast_download">
<iframe width="200" height="60" src=<%= @podcast.mixcloud_url %> frameborder="0"></iframe><div style="clear: both; height: 3px; width: 192px;"></div><p style="display: block; font-size: 11px; font-family: 'Open Sans', Helvetica, Arial, sans-serif; margin: 0px; padding: 3px 4px; color: rgb(153, 153, 153); width: 192px;"><div style="clear: both; height: 3px; width: 192px;"></div>	<% end %>
</div>
</div>








</div>
