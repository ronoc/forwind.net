<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US" xml:lang="en-US">
<head>
  <title>Forwind | <%= @context.humanize %> | <%= @share_details[:title_subtext] %></title>
<meta name="google-site-verification" content="Oq2AaagB6c_NXK25RChwoHq0tn7yRod2WRabKCgsYD8" />
<meta name="description" content= "Forwind | <%= @context.humanize %> | <%= @share_details[:title_subtext] %>" />
<meta name="keywords" content="Forwind, <%= @context.humanize %>, <%= @share_details[:title_subtext] %>" />   
  <%= stylesheet_link_tag('forwind') %>
  <%= stylesheet_link_tag('sharre') %>
<%= auto_discovery_link_tag(:atom, "/feeds.atom") %>
 <script src="http://code.jquery.com/jquery-1.7.min.js"></script>
<script src="/javascripts/jquery.sharrre-1.3.4.min.js"></script>
<link rel="icon" href="/images/index/favicon.ico" type="image/x-icon" />
	</head>
    <body>

	
      <div id="outer_container">
          <div id="crumb_trail">
          </div>
           <div id="inner_container">
	        	<%= render(:partial => "shared/home/tabs") %>
            	<%= yield %>
				<div id="footer">
					<div id="footer-links">
						<div class="title-hr-2gridleft">
						<hr/>
							<div id="example2">
							<div id="shareme" data-url="<%= @share_details[:link] %>" data-text="<%= @share_details[:text] %>" >
							</div>						
						       <script>
						            $('#shareme').sharrre({
						              share: {
						                twitter: true,
						                facebook: true,
						                googlePlus: true
						              },
						              template: '<div class="box"><div class="left">SHARE</div><div class="middle"><a href="#" class="facebook">F</a><a href="#" class="twitter">T</a><a href="#" class="googleplus">+1</a></div></div>',
						              enableHover: false,
						              enableTracking: true,
						              text: "<%= @share_details[:text] %>",
						              title: "<%= @share_details[:text] %>",
						              render: function(api, options){
						                $(api.element).on('click', '.twitter', function() {
						                  api.openPopup('twitter');
						                });
						                $(api.element).on('click', '.facebook', function() {
						                  api.openPopup('facebook');
						                });
						                $(api.element).on('click', '.googleplus', function() {
						                  api.openPopup('googlePlus');
						                });
						              }
						            });
						        </script>
							</div>
						<hr/>
						</div>
					</div>
					<div id="footer-subscribe">
						<div class="title-hr-1gridright">
						<hr/>
						<h2>Subscribe to our newsletter</h2>
						<hr/>
						</div>

<form accept-charset="UTF-8" action="/home/subscribe" method="post">
							<div id="newshold">
<input type="text" id="newsinput" placeholder="enter your email address" name="email"/><input type="submit" id="newssub" value="subscribe" />
							</div>
</form>

					</div>

				</div>
				</div>
				</div>



				<div id="legal-notice">
				<p class="copyright"><i>for/wind.net </i>&#169; <i><script type="text/javascript">document.write((new Date()).getFullYear());</script></i></p>
				</div>



			</div>


      <script src='http://www.google-analytics.com/ga.js' type='text/javascript'></script>
  		<script type="text/javascript">
        try{
          var pageTracker = _gat._getTracker("UA-8508337-1");
          pageTracker._trackPageview();
          } catch(err) {}
      </script>
    </body>
</html>

